<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RMA_2022_23_Student_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RMA_2022_23_Student_App"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    xmlns:helpers="clr-namespace:RMA_2022_23_Student_App.Helpers"
    BackgroundColor="White">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:IntroScreenView}"
        Route="IntroScreenView" />

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Profile page"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />

    <ShellContent
        Title="Subjects page"
        ContentTemplate="{DataTemplate local:Subjects}"
        Route="Subjects" />

    <ShellContent
        Title="Settings page"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

</Shell>
